{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "lib": [
            "dom",
            "es2016",
            "es2017",
            "esnext"
        ],
        "moduleResolution": "node",
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": true,
        "allowJs": true,
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "webpack.config.js"
    ]
}